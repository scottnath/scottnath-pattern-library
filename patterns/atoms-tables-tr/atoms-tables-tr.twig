{% if content is empty %}
  {% if head is not null %}
    {% set content = tr.th.content %}
  {% else %}
    {% set content = tr.td.content %}
  {% endif %}
{% endif %}

&lt;tr class=&quot;{{tr.class}}&quot;&gt;
  {% for item in content %}
    {% set i = loop.index0 %}
    {% if content[i].class == 'base--th' %}
      {% include 'atoms/tables/th/th.twig' %}
    {% else %}
      {% include 'atoms/tables/td/td.twig' %}
    {% endif %}  

  {% endfor %}
&lt;/tr&gt;
